{
  "rules": [
    {
      "methods": ["GET"],
      "pattern": "/state",
      "roles": ["ADMIN","USER","DONATOR"]
    },
    {
      "methods": ["GET"],
      "pattern": "/donations",
      "roles": [
        "KORISNIK"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/units",
      "roles": [
        "DONATOR"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/categories",
      "roles": [
        "DONATOR"
      ]
    },
    {
      "methods": ["POST"],
      "pattern": "/donations",
      "roles": [
        "DONATOR"
      ]
    },
    {
      "methods": ["PUT","DELETE"],
      "pattern": "/donations/*",
      "roles": [
        "DONATOR"
      ]
    },

    {
      "methods": ["POST"],
      "pattern": "/don_items",
      "roles": [
      "DONATOR"  ]
    },{
      "methods": ["PUT","DELETE"],
      "pattern": "/don_items/*",
      "roles": [
        "DONATOR"  ]
    },
    {
      "methods": ["PUT","POST","DELETE"],
      "pattern": "/ads",
      "roles": [
        "KORISNIK"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/ads",
      "roles": [
        "DONATOR"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/notifications",
      "roles": [
        "KORISNIK","DONATOR"
      ]
    },

    {
      "methods": ["GET","POST"],
      "pattern": "/products",
      "roles": [
      "DONATOR"  ]
