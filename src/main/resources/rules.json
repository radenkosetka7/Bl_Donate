    {
      "methods": ["PUT","POST","DELETE"],
      "pattern": "/res_items",
      "roles": [
        "KORISNIK"
      ]
    },
    {
      "methods": ["PUT","POST","DELETE"],
      "pattern": "/reservations",
      "roles": [
        "KORISNIK"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/users/*/donors",
      "roles": [
        "KORISNIK","DONATOR"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/users/requests",
      "roles": [
        "ADMIN"
      ]
