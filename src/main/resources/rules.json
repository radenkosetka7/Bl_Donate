    {
      "methods": ["GET"],
      "pattern": "/users/users",
      "roles": [
        "ADMIN"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/users/*",
      "roles": [
        "KORISNIK","DONATOR","ADMIN"
      ]
    },
    {
      "methods": ["PUT"],
      "pattern": "/users/*",
      "roles": [
        "KORISNIK","DONATOR","ADMIN"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/users/*/donations",
      "roles": [
        "DONATOR"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/users/*/donations/archive",
      "roles": [
        "DONATOR"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/users/*/ads",
      "roles": [
        "KORISNIK"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/users/*/notifications",
      "roles": [
        "KORISNIK","DONATOR"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/users/*/donor/reservations",
      "roles": [
        "DONATOR"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/users/*/reservations",
      "roles": [
        "KORISNIK"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/users/*/reservations/archive",
      "roles": [
        "KORISNIK"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/users/*/reservations/archive/range",
      "roles": [
        "KORISNIK"
      ]
    },
    {
      "methods": ["DELETE"],
      "pattern": "/users/*",
      "roles": [
        "KORISNIK","DONATOR"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/users/*/reservations",
      "roles": [
        "KORISNIK"
      ]
    },
    {
      "methods": ["PUT"],
      "pattern": "/users/*/status",
      "roles": [
        "ADMIN"
      ]
    },
    {
      "methods": ["PUT"],
      "pattern": "/users/*/rule",
      "roles": [
        "ADMIN"
      ]
    },
    {
      "methods": ["DELETE"],
      "pattern": "/users/deleteUser",
      "roles": [
        "ADMIN"
      ]
    },
    {
      "methods": ["GET","POST"],
      "pattern": "/users/reset_password",
      "roles": [
        "DONATOR","KORISNIK"
      ]
    }
  ]
}